<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CFD1D3"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="56dp"
        android:text="Thêm nhân viên"
        android:textColor="@color/teal"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_staff" />

    <EditText
        android:drawableLeft="@drawable/code_staff"
        android:id="@+id/EDT_CODE_STAFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="  Mã nhân viên"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="40dp" />

    <EditText
        android:drawableLeft="@drawable/icon_users_staff"
        android:id="@+id/EDT_USER_STAFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  User nhân viên"
        app:layout_constraintTop_toBottomOf="@+id/EDT_CODE_STAFF"
        tools:layout_editor_absoluteX="40dp" />

    <EditText

        android:drawableLeft="@drawable/pass"
        android:id="@+id/EDT_PASSWORD_NHANVIEN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="  Password"
        app:layout_constraintTop_toBottomOf="@+id/EDT_USER_STAFF"
        tools:layout_editor_absoluteX="40dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EDT_PASSWORD_NHANVIEN"
        app:srcCompat="@drawable/sex_staff" />

    <CheckBox
        android:id="@+id/CB_NAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:text="Nam"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/EDT_PASSWORD_NHANVIEN" />

    <CheckBox
        android:id="@+id/CB_NU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:text="Nữ"
        app:layout_constraintStart_toEndOf="@+id/CB_NAM"
        app:layout_constraintTop_toBottomOf="@+id/EDT_PASSWORD_NHANVIEN" />

    <EditText
        android:drawableLeft="@drawable/date_birth_staff"
        android:id="@+id/EDT_NGAYSINH_STAFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  Chọn ngày sinh"
        app:layout_constraintTop_toBottomOf="@+id/CB_NAM"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:backgroundTint="@color/teal"
        android:id="@+id/BTN_THEM_STAFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="48dp"
        android:text="Thêm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EDT_NGAYSINH_STAFF" />

    <Button
        android:backgroundTint="@color/teal"
        android:id="@+id/BTN_HUY_STAFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="48dp"
        android:text="Hủy"
        app:layout_constraintStart_toEndOf="@+id/BTN_THEM_STAFF"
        app:layout_constraintTop_toBottomOf="@+id/EDT_NGAYSINH_STAFF" />

</androidx.constraintlayout.widget.ConstraintLayout>